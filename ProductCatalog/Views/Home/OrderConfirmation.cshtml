@{
    ViewBag.Title = "Order Confirmation";
}

<style>
    .confirmation-container {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .confirmation-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 40px;
        text-align: center;
    }

    .success-icon {
        font-size: 80px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .order-id {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        font-family: monospace;
        font-size: 1.2rem;
        margin: 20px 0;
    }

    .info-box {
        background-color: #e7f3ff;
        border-left: 4px solid #007bff;
        padding: 15px;
        margin: 20px 0;
        text-align: left;
    }
</style>

<div class="container confirmation-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="confirmation-card">
                <div class="success-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                
                <h1 class="display-4 mb-3">Thank You!</h1>
                <h3 class="text-muted mb-4">Your order has been received</h3>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["OrderId"] != null)
                {
                    <div class="order-id">
                        <strong>Order ID:</strong> @TempData["OrderId"]
                    </div>
                }

                <div class="info-box">
                    <h5><i class="bi bi-info-circle"></i> What happens next?</h5>
                    <ul class="text-start">
                        <li>Your order has been queued for processing</li>
                        <li>Our backend system will process your order shortly</li>
                        <li>You will receive a confirmation email once processing is complete</li>
                        <li>Your items will be prepared for shipment</li>
                    </ul>
                </div>

                <div class="mt-4">
                    <p class="text-muted mb-3">
                        <i class="bi bi-envelope"></i> A confirmation email will be sent to you shortly
                    </p>
                    
                    <div class="d-grid gap-2 d-md-block">
                        @Html.ActionLink("Continue Shopping", "Index", "Home", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
