@model List<ProductCatalog.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
}

<style>
    .product-card {
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .product-image {
        height: 200px;
        object-fit: cover;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 14px;
    }

    .product-body {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .product-description {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 1rem;
        flex: 1;
    }

    .product-price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #28a745;
        margin-bottom: 0.5rem;
    }

    .product-category {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }

    .stock-badge {
        font-size: 0.8rem;
    }

    .alert-custom {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Welcome to Our Product Catalog</h1>
            <p class="lead">Browse our collection of quality products</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show alert-custom" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show alert-custom" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning alert-custom" role="alert">
            <strong>Warning!</strong> @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row mb-3">
            <div class="col-12">
                <p class="text-muted">Showing @Model.Count products</p>
            </div>
        </div>

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card product-card">
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" 
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                <div style="display: none; height: 200px; align-items: center; justify-content: center; background-color: #f8f9fa;">
                                    <span class="text-muted">Image Not Available</span>
                                </div>
                            }
                            else
                            {
                                <div style="height: 200px; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;">
                                    <span class="text-muted">No Image</span>
                                </div>
                            }
                        </div>
                        <div class="card-body product-body">
                            <h5 class="product-title">@product.Name</h5>
                            <p class="product-category">
                                <span class="badge bg-secondary">@product.Category</span>
                            </p>
                            <p class="product-description">@product.Description</p>
                            <div class="mt-auto">
                                <div class="product-price">$@product.Price.ToString("N2")</div>
                                <p class="mb-2">
                                    @if (product.StockQuantity > 0)
                                    {
                                        <span class="badge bg-success stock-badge">In Stock (@product.StockQuantity available)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger stock-badge">Out of Stock</span>
                                    }
                                </p>
                                <p class="text-muted small mb-2">SKU: @product.SKU</p>
                                <form asp-controller="Home" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-primary w-100" @(product.StockQuantity <= 0 ? "disabled" : "")>
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">No Products Available</h4>
                    <p>There are currently no products available in our catalog. Please check back later!</p>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        window.setTimeout(function() {
            $(".alert-custom").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 5000);
    </script>
}